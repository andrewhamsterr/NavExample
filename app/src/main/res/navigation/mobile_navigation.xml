<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home_graph">

    <include app:graph="@navigation/home_graph" />
    <include app:graph="@navigation/dashboard_graph" />
    <include app:graph="@navigation/notification_nav_graph" />

    <action
        android:id="@id/action_to_home"
        app:destination="@id/home_graph" />

    <action
        android:id="@id/action_to_dashboard"
        app:destination="@id/dashboard_graph" />
    <action
        android:id="@id/action_to_notifications"
        app:destination="@id/notification_nav_graph"/>

</navigation>